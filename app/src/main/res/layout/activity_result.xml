<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ResultActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/photoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mainDig"
        android:layout_width="319dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="center"
        android:textColor="@color/header_text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="319dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/roboto_bold"
        android:text="It may also be:"
        android:textAlignment="textStart"
        android:textColor="@color/header_text_color"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/secondDig0"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="textStart"
        android:textColor="@color/regular_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/secondDig1"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="textStart"
        android:textColor="@color/regular_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/secondDig2"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="510dp"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="textStart"
        android:textColor="@color/regular_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/secondDig3"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="textStart"
        android:textColor="@color/regular_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/secondDig4"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610dp"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="textStart"
        android:textColor="@color/regular_text_color"
        android:textSize="15sp" />

</RelativeLayout>